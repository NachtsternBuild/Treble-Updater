<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrebleUpdater" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme colors here. -->

        <!-- Primary brand color for light and dark mode -->
        <item name="colorPrimary">@color/color_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.Material3.Button</item>

        <!-- Customize window features -->
        <item name="android:windowLightStatusBar" tools:targetApi="lollipop">true</item>
    </style>
</resources>
